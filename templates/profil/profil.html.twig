{% extends 'base.html.twig' %}

{% block title %}Page de profil{% endblock %}

{% block body %}

<div id="main-wrapper">
   
    
    <div class="login-section section pt-95 pt-lg-75 pt-md-65 pt-sm-55 pt-xs-45">
        <div class="container">

        <nav class="navbar navbar-expand-sm bg-light">

            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                <div class="dropdown">
                    <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                      <i class="fa fa-envelope"></i>  Ma boite email
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Boite de Reception</a>
                        <a class="dropdown-item" href="#">Nouvelle Email</a>
                        {% if not emailtcheck %}
                        <a class="dropdown-item" href="{{ path('add_email') }}">Création d'une boite Email</a>
                        {% else %}
                        <span class="badge badge-info" style="margin-left: 20px;"> {{ emailtcheck.adresseMail}}</span>
                        

                        {% endif %}
                    </div>
                    </div>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">Link 2</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#">Link 3</a>
                </li>
            </ul>

        </nav>


        </div>
        </div>
    <!--Page Banner Area Start-->
    <div class="login-section section pt-95 pt-lg-75 pt-md-65 pt-sm-55 pt-xs-45">
        <div class="container">
        
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                    <h3>- Joueur -</h3>
                    <p class="card-text">Nom : {{IG.firstname}}</p>
                    <p class="card-text">Prenom : {{IG.lastname}}</p>
                    <hr>
                    <h3>In Game </h3>
                    <p class="card-text">Job : {{IG.job}}</p>
                    <p class="card-text"> Argent en poche : {{IG.money}}$</p>
                    <p class="card-text"> Argent en banque : {{IG.bank}}$</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body text-center">
                    <p class="card-text bg-danger text-white">Mes Sanctions</p>
                    <hr>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                            <th>Motif</th>
                            <th>Auteur</th>
                            <th>Date</th>
                        </thead>
                        <tbody>
               
                        {% for sanctions in sanction %}
        
        
                            <tr class="colorwhite">
                            <td>{{ sanctions.raison }}</td>
                            <td>{{ sanctions.author }}</td>
                            <td>{{ sanctions.createdAt|date('d/m/y') }}</td>
                            </tr>
        
                        {% endfor %}
                        </tbody>
                        </table>
                    </div>
                </div>  
            </div>
        </div>
        </div> 
    <!--Page Banner Area End-->
    <div class="login-section section pt-95 pt-lg-75 pt-md-65 pt-sm-55 pt-xs-45">
        <div class="container">
            <div id="accordion">
        {% for vehicles in vehicle %}
            <div class="card">
                <div class="card-header">
                <a class="card-link" data-toggle="collapse" href="#categorie{{ vehicles.id }}">
                    {{ vehicles.vehiclename|lower}}
                </a>
                </div>
                
                <div id="categorie{{ vehicles.id}}" class="collapse" data-parent="#accordion">
                <div class="card-body">

                 <div class="col-lg-4">
                    <img src="{{ asset('assets/images/V2/voiture.png') }}" alt="voitureimage" >
                 </div>

                 <div class="col-lg-8">
                    <table class="table table-hover">
                    <tr>
                    <th>Nom du Véhicule</th>
                    <td>{{ vehicles.vehiclename|upper}}</td>
                    <th>Plaque du Véhicule</th>
                    <td>{{ vehicles.plate|upper}}</td>
                    </tr>
                    </table>
                 </div>

     
                </div>
                </div>
                {% endfor  %}
            </div>
            </div>
            </div>
            </div>

    
    
</div>   

{% endblock %}